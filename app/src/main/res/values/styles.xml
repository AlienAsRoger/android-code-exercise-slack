<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DisplayNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/display_name_text_size</item>
        <item name="lineHeight">@dimen/display_name_line_height</item>
    </style>

    <style name="UsernameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/grey_1</item>
        <item name="android:textSize">@dimen/display_name_text_size</item>
        <item name="lineHeight">@dimen/display_name_line_height</item>
    </style>


</resources>
